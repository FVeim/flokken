---
interface Props {
  title?: string;
}

const { title = 'Flokken' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
:root {
  --accent: 136,58,234;
  --accent-light: 224,204,250;
  --accent-dark: 49,10,101;
}

html {
  font-family: system-ui, Segoe UI, Roboto, 'Helvetica Neue', Arial;
  background: #f8f9fa;
}

main {
  max-width: 900px;
  margin: 1.25rem auto;
  padding: 1rem;
}
</style>
