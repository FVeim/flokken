---
interface Props {
  title?: string;
}

const { title = 'Flokken' } = Astro.props;
---

<header class="site-header">
  <div class="inner">
    <h1>{title}</h1>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/about">About</a>
    </div>
  </div>
</header>

<style>
.site-header{background:#fff;padding:1rem 0;box-shadow:0 2px 8px rgba(0,0,0,0.04)}
.site-header .inner{max-width:900px;margin:0 auto;padding:0 1rem;display:flex;justify-content:space-between;align-items:center}
.site-header h1{margin:0;color:rgb(var(--accent));font-size:1.25rem}
.nav-links{display:flex;gap:1rem}
.nav-links a{text-decoration:none;color:rgb(var(--accent-dark));font-weight:500}
</style>